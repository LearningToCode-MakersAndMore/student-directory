@students = []
def prompt_students
  puts "Please enter the names of the students\nTo finish, just hit return twice"
  name = gets.chomp
end

def add_student(name)
  while name.empty? == false do
    @students << { name: name.to_sym, cohort: :november }
    puts "Now we have #{@students.count} students"
    name = gets.chomp
  end
end

def input_students
  name = prompt_students
  add_student(name)
end

def print_header
  puts "The students of my cohort at Makers Academy"
  puts '-------------'
end

def print_students
  @students.each do |student|
    puts "#{student[:name]} (#{student[:cohort]} cohort)"
  end
end

def print_footer
  print "Overall, we have #{@students.count} great students"
end

def disp_students
  print_header
  print_students
  print_footer
end

def prompt
  puts "1. Input students\n2. Display students\n3. Display saved students\n4. Save students\n9. Exit"
  selection = gets.chomp
end

def process(selection)
  case selection
  when '1'
    input_students
  when '2'
    disp_students
  when '3'
    disp_saved_students
  when '4'
    save_students
  when '9'
    exit
  else
    puts "#{selection} - is an invalid input"
  end
end

def disp_saved_students
  require 'csv'
  puts CSV.read('./student_list')
end

def save_students
  file = File.open('student_list', 'w')
  @students.each do |student|
    file.puts "#{student[:name]},#{student[:cohort]}"
  end
  file.close
end

def interactive_menu
    selection = prompt
    process(selection)
    interactive_menu
end

interactive_menu
